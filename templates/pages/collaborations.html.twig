{% extends 'base.html.twig' %}

{% block title %}
	Accordéoniste, Paris | Jérémy Dutheil | Collaborations artistiques
{% endblock %}

{% block metadesc %}
    <meta name="description" content="Accordéoniste professionnel à Paris, Jérémy Dutheil fait partie de plusieurs projets musicaux qu'il vous présente ici.">
{% endblock %}

{% block body %}
	<section class="flash flash--limited">
		<div class="flash-item">
			<img src="img/collab_pic.jpg" alt="" class="flash-item__background flash-item__background--collab">
		</div>
