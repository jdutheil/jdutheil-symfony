{% endblock %}


{% block body %}
	<section class="flash flash--limited">
		<div class="flash-item">
			{% include 'utils/picture.html.twig' with { 'sources': { 'webp': 'img/manouchebg.webp',
																				 'jpeg': 'img/manouchebg.jpg'
																			   },
																	'default': 'img/manouchebg.jpg',
																	'lazyload': false,
